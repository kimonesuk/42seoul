{
    "tasks": [
        {
            "type": "shell",
            "label": "cub3d gcc build", // ui에 나타나는 이름
            "command": "/usr/bin/gcc", // 명령어
            "args": [ // 명령어 인자
                // "-g3",
                // "-fsanitize=address",
                "-Wall",
                "-Wextra",
                "-Werror",
                "-I",
                "${workspaceFolder}/include/",
                "${workspaceFolder}/libmlx.dylib",
                "${workspaceFolder}/libmlxgl.a",
                "${workspaceFolder}/srcs/*.c",
                "-o",
                "cub3D"
            ],
            "options": { // 여러가지 환경 변수
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [ // warning, error 파싱 규칙 설정
                "$gcc"
            ],
            "group": {
                "kind": "build", // task 파일이 속하는 그룹
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "label": "execute",
            "command": "${workspaceFolder}/cub3d",
            "args":[
                "map.cub",
                //"--save"
            ],
            "group": "test",
        },
    ],
    "version": "2.0.0"
}